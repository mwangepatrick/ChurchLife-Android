<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:background="@drawable/splash_bottom" 
	    android:orientation="vertical"
	    android:padding="10sp">
		        			      
		<ViewFlipper
			android:id="@+id/ViewFlipper01"
			android:layout_height="wrap_content" 
			android:layout_width="match_parent">
				
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
						    android:layout_width="match_parent"
					   		android:layout_height="wrap_content" 
					    	android:background="@drawable/roundedcornershape"
					    	android:orientation="vertical"
					    	android:padding="7sp"
					    	android:layout_gravity="bottom">
	    	
				<EditText android:text="" 
					android:id="@+id/txtEmail" 
					android:hint="@string/Login.Email"		
					android:layout_width="match_parent" 
					android:layout_height="40sp"
					android:singleLine="true"			
					android:inputType="textEmailAddress"					
					android:background="@android:color/transparent"
					android:textColor="@android:color/black"
					android:textCursorDrawable="@null">
				</EditText>
				
				<ImageView
				    xmlns:android="http://schemas.android.com/apk/res/android"
				    android:src="@android:drawable/divider_horizontal_bright"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:scaleType="fitXY">
				</ImageView>
					
				<EditText 
					android:text="" 
					android:id="@+id/txtEmailPassword" 
					android:hint="@string/Login.Password"
					android:layout_width="fill_parent" 
					android:layout_height="40sp"
					android:singleLine="true"
					android:password="true" 
					android:background="@android:color/transparent"
					android:textColor="@android:color/black"
					android:textCursorDrawable="@null">
				</EditText>										
									
			</LinearLayout>	

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
						    android:layout_width="match_parent"
					   		android:layout_height="wrap_content" 
					    	android:background="@drawable/roundedcornershape"
					    	android:orientation="vertical"
					    	android:padding="7sp">
	    	
	    		<EditText 
					android:text="" 
					android:id="@+id/txtSiteNumber" 
					android:hint="@string/Login.SiteNumber"
					android:inputType="number"			
					android:layout_width="fill_parent" 
					android:layout_height="40sp"
					android:background="@android:color/transparent"
					android:textColor="@android:color/black"
					android:textCursorDrawable="@null">
				</EditText>
				
				<ImageView
				    xmlns:android="http://schemas.android.com/apk/res/android"
				    android:src="@android:drawable/divider_horizontal_bright"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:scaleType="fitXY">
				</ImageView>
				
				<EditText android:text="" 
					android:id="@+id/txtUsername" 
					android:hint="@string/Login.Username"		
					android:layout_width="match_parent" 
					android:layout_height="40sp"
					android:singleLine="true"			
					android:inputType="textEmailAddress"					
					android:background="@android:color/transparent"
					android:textColor="@android:color/black"
					android:textCursorDrawable="@null">
				</EditText>
				
				<ImageView
				    xmlns:android="http://schemas.android.com/apk/res/android"
				    android:src="@android:drawable/divider_horizontal_bright"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:scaleType="fitXY">
				</ImageView>
					
				<EditText 
					android:text="" 
					android:id="@+id/txtPassword" 
					android:hint="@string/Login.Password"
					android:layout_width="fill_parent" 
					android:layout_height="40sp"
					android:singleLine="true"
					android:password="true" 
					android:background="@android:color/transparent"
					android:textColor="@android:color/black"
					android:textCursorDrawable="@null">
				</EditText>				
			</LinearLayout>	
	
		</ViewFlipper>
		
		<CheckBox 
			android:text="Remember Me" 
			android:layout_gravity="center"
			android:id="@+id/chkRememberMe" 
			android:textColor="#000000"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</CheckBox>				
		<Button			
			android:text="@string/Login.Login" 
			android:id="@+id/btnLogin"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		</Button>
					
					
		<LinearLayout android:layout_width="match_parent" 
						  android:gravity="center_horizontal" 
						  android:layout_height="wrap_content" 
						  android:layout_gravity="bottom">
							
				<ImageButton android:layout_height="wrap_content" 
						android:src="@drawable/icon_light_dot" 
						android:id="@+id/imageButtonView1" 
						android:layout_width="wrap_content"
						android:background="@null">
				</ImageButton>	
				<ImageButton android:layout_height="wrap_content" 
						android:src="@drawable/icon_dark_dot" 
						android:id="@+id/imageButtonView2" 
						android:layout_width="wrap_content"
						android:background="@null">
				</ImageButton>				
		</LinearLayout>		
				

</LinearLayout>
